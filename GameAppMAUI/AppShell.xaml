<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GameAppMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GameAppMAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="GameAppMAUI">

	<FlyoutItem>
		<ShellContent
        Title="Developers list"
        ContentTemplate="{DataTemplate local:DevelopersPage}"
        Route="DevelopersPage" />

		<ShellContent
        Title="Games list"
        ContentTemplate="{DataTemplate local:GamesPage}"
        Route="GamessPage" />
	</FlyoutItem>

</Shell>
